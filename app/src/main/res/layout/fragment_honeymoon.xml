<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.project.maqdoom.ui.customerHoneymoon.TouristHoneymoonViewModel" />

        <variable
            name="spinAdapter"
            type="android.widget.ArrayAdapter" />
    </data>

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tg_background"
        android:focusable="true"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigation_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/navBackBtn"
                style="@style/Button.ImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:onClick="@{() -> viewModel.onNavBackClick()}"
                android:background="@drawable/back_btn" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="@string/honeymoon_title"
                android:textColor="@color/white"
                style="@style/TextStyle.Menu.Normal"
                android:textSize="17sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/optionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/tourist_guide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:onClick="@{() -> viewModel.onTouristGuideClick()}"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="@drawable/tourist_guide_btn_normal"></ImageView>

                <TextView
                    android:id="@+id/tvTouristGuide"
                    style="@style/TextStyle.Menu.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|center_vertical"
                    android:text="@string/t_guide"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tourist_groups"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:onClick="@{() -> viewModel.onTouristGroupClick()}"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="@drawable/tourist_group_btn_normal"></ImageView>

                <TextView
                    android:id="@+id/tvTouristGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:text="@string/t_group"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    style="@style/TextStyle.Menu.Normal"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/honeymoon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="@drawable/tourist_honeymoon_btn_selected"></ImageView>

                <TextView
                    android:id="@+id/tvHoneymoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:text="@string/t_honeymoon"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    style="@style/TextStyle.Menu.Normal"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/t_family_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:onClick="@{() -> viewModel.onTouristFamilyClick()}"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="@drawable/tourist_family_btn_normal"></ImageView>

                <TextView
                    android:id="@+id/tvFamilyTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:text="@string/t_arrange_trips"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    style="@style/TextStyle.Menu.Normal"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/optionButtons"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="8">
            <RelativeLayout
                android:id="@+id/ll_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerCity"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/spinner_arrow"
                    android:layout_marginRight="5dp"
                    android:prompt="@string/s_city" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/downarrow" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ll_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerCountry"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/spinner_arrow"
                    android:textSize="12sp"
                    android:prompt="@string/s_city" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/downarrow" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerPrice"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:background="@drawable/spinner_arrow"
                    android:prompt="@string/s_language" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/downarrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerService"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/spinner_arrow"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:prompt="@string/s_city" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/downarrow" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_spinner"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="10dp">
            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/address_looking_up"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/blogRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:adapter_hm="@{viewModel.getTravelListLiveData}"
                tools:listitem="@layout/item_honeymoon_view" />
        </RelativeLayout>
    </RelativeLayout>

</layout>